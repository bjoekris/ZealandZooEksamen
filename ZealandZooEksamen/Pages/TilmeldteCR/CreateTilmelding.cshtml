@page
@model ZealandZooEksamen.Pages.TilmeldteCR.CreateTilmeldingModel
@{
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.OpretTilmeldte.TilmeldingId" />
            </div>
            <div>
                <input type="hidden" asp-for="@Model.eventId" />
            </div>

            <div class="form-group">
                <label>Navn</label><br>
                <input asp-for="@Model.OpretTilmeldte.Navn" class="form-control" required /><br />
            </div>

            <div class="form-group">
                <label>Telefon</label><br>
                <input asp-for="@Model.OpretTilmeldte.Telefon" class="form-control" pattern="[0-9]{8}" title="Venligst indtast 8 tegn" required /><br />
            </div>
            <br />
            <div>
                <input type="submit" class="btn btn-success" value="Tilmeld" asp-page-handler="Opret" asp-route-eventId="@Model.eventId" />
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-danger" asp-page="/EventCRUD/Index">Fortryd</a>
            </div>
            
        </form>
    </div>  
</div>
