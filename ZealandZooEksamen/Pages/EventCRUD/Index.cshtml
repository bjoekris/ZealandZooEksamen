@page
@model IndexModel
@{
    ViewData["Title"] = "Zealand Zoo";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@*Bjørn*@

<div class="text-center">
    <h1> Zealand Zoo</h1>
    <img src="~/images/Zealand Zoo.jpg" class="card-img-top w-25" alt="Zealand Zoo Logo">

</div>

<h2>Events</h2>
<div class="row list-group-horizontal">
    @foreach (var e in Model.Events)
    {
        <div class="card column">
            <div class="card-body">
                <h5 class="card-title">@e.Navn</h5>
                <p>@e.EventInfo</p>
                <p><strong>@e.Dato</strong></p>
                <p>Starter <strong>@e.TimeStart</strong></p>
                <p>Slutter <strong>@e.TimeEnd</strong></p>
                <p>Der er <strong>@Model.LedigePladser(e.EventId)</strong> ledige pladser</p>
            </div>
           
                <div class="card-footer">
                    @if (Model.LedigePladser(e.EventId)>0)
                    {
                        <a class="btn btn-success" asp-page="/TilmeldteCR/CreateTilmelding" asp-route-eventId="@e.EventId">Tilmeld</a>
                    }
                    else
                    {
                        <a class="btn btn-danger disabled">Udsolgt</a>
                    }
                    <h6></h6>
                    <a class="btn btn-primary" asp-page="/TilmeldteCR/IndexTilmelding" asp-route-eventId="@e.EventId">Tilmeldte</a>
                </div>
            
        </div>
    }
</div>
<br />

<div>
    <h2>Faste åbningstider</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Event</th>
                <th>Dage Åbent</th>
                <th>Åbningstid</th>
                <th>Lukke tid</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Fredagsbar</td>
                <td>Fredag</td>
                <td>14:00</td>
                <td>17:00</td>
            </tr>
        </tbody>
    </table>
</div>
