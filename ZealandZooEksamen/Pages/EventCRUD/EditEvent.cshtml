@page
@model ZealandZooEksamen.Pages.EventCRUD.EditEventModel
@{
    }
    // User Story 14 - Bjørn
    @if (ZealandZooEksamen.Services.UserService.iAmAdmin)
    {

<body class="bg-light">
    <div class="container border-2 rounded-2">
        <h1>Rediger @Model.Navn</h1>
        <div class="row">
            <div class="col-md-6 text-black bg-yellow rounded-2">
                <form method="post" onsubmit="return validateTimes()">
                    <div>
                        <input type="hidden" asp-for="@Model.EventId" />
                    </div>

                        <div class="form-group">
                            <label>Event Navn</label><br>
                            <input asp-for="@Model.Navn" class="form-control-sm" required /><br />
                        </div>

                        <div class="form-group">
                            <label>Event Info</label><br>
                            <input asp-for="@Model.EventInfo" class="form-control-sm" required /><br />
                            <span asp-validation-for="@Model.EventInfo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Dato</label><br>
                            <input type="date" asp-for="@Model.Dato" class="form-control" required /><br />
                            <span asp-validation-for="@Model.Dato" class="text-danger"></span>
                        </div>

                    <div class="form-group">
                        <label>Start Tidspunkt</label><br>
                        <input type="time" asp-for="@Model.TimeStart" id="startTime" class="form-control" required /><br />
                        <span asp-validation-for="@Model.TimeStart" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Slut Tidspunkt</label><br>
                        <input type="time" asp-for="@Model.TimeEnd" id="endTime" class="form-control" required /><br />
                        <span asp-validation-for="@Model.TimeEnd" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                    <script>
                        function validateTimes() 
                        {
                            var startTime = document.getElementById('startTime').value;
                            var endTime = document.getElementById('endTime').value;

                            if (endTime < startTime) 
                            {
                                alert('Slut tid kan ikke være før Start tid.');
                                return false;
                            }

                            return true;
                        }
                    </script>

                    <div class="form-group">
                        <label>Maks Antal Deltagere</label><br>
                        <input asp-for="@Model.MaksDeltagere" class="form-control-sm" required /><br />
                        <span asp-validation-for="@Model.MaksDeltagere" class="text-danger"></span>
                    </div>

                        @*<div class="form-group">
                        <label>Antal tilmeldte Deltagere</label><br>
                        <input asp-for="@Model.AntalDeltagere" class="form-control-sm" /><br />
                        <span asp-validation-for="@Model.AntalDeltagere" class="text-danger"></span>
                    </div>*@

                    <br />
                    <form method="post">
                        <div class="form-group">
                            <input type="submit" value="Rediger" asp-page-handler="Edit" asp-route-eventId="@Model.EventId" class="btn btn-warning" />
                        </div>
                        <br />
                        <div class="form-group">
                            <a asp-page="/Admin" class="btn btn-danger">Fortryd</a>
                        </div>
                        <br />
                    </form>
                </form>
            </div>
        </div>
    </div>
</body>
}