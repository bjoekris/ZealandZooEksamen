@page
@model ZealandZooEksamen.Pages.LagerCRUD.EditLagerModel
@{
}
@*User story 10 - Bjørn*@





<div class="container border-2 rounded-2">

        <h1>Ændre Varer @Model.LagerId @Model.LagerNavn</h1>
        <div class="row">
            <div class="col-md-6 text-black bg-light">
                <form method="post" onsubmit="return validateNumbers()">

                    <div >
                    <input type="hidden" asp-for="@Model.LagerId" required />

                    </div>


                    <div class="form-group">
                        <label>Lager Navn</label><br>
                        <input asp-for="@Model.LagerNavn" class="form-control" required /><br />
                    </div>

                    <div class="form-group">
                        <label>Lager Antal</label><br>
                        <input asp-for="@Model.LagerAntal" class="form-control" required /><br />
                        <span asp-validation-for="@Model.LagerAntal" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Salgs Pris</label><br>
                        <input asp-for="@Model.LagerPris" id="number1" class="form-control" required /><br />
                        <span asp-validation-for="@Model.LagerPris" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Indkøbs Pris</label><br>
                        <input asp-for="@Model.LagerIndkøbPris" id="number2" class="form-control" required /><br />
                        <span asp-validation-for="@Model.LagerIndkøbPris" class="text-danger"></span>
                    </div>

                <script>
                    function validateNumbers() {
                        var number1Value = parseFloat(document.getElementById('number1').value);
                        var number2Value = parseFloat(document.getElementById('number2').value);

                        if (number1Value <= number2Value) {
                            alert('Indkøbs pris kan ikke være højere end Salgs pris.');
                            return false;
                        }

                        return true;
                    }
                </script>

                        <div class="form-group">
                            <input type="submit" value="Ændre @Model.LagerNavn" class="btn btn-success" asp-page-handler="Edit" asp-route-lagerId="@Model.LagerId" class="btn btn-dark" />
                        </div>
                        <p></p>
                        <div class="form-group">
                            <a class="btn btn-danger" asp-page="IndexLager">Fortryd</a>
                        </div>
                        <p></p>
                </form>
            </div>
        </div>

    </div>