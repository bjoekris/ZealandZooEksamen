@page
@model ZealandZooEksamen.Pages.LagerCRUD.EditLagerModel
@{
}
@*User story 10 - Bjørn*@





<div class="container border-2 rounded-2">

        <h1>Ændre Varer @Model.LagerId @Model.LagerNavn</h1>
        <div class="row">
            <div class="col-md-6 text-white bg-danger">
                <form method="post">

                    <div >
                    <input type="hidden" asp-for="@Model.LagerId" required />

                    </div>


                    <div class="form-group">
                        <label>Lager Navn</label><br>
                        <input asp-for="@Model.LagerNavn" class="form-control" required /><br />
                    </div>

                    <div class="form-group">
                        <label>Lager Antal</label><br>
                        <input asp-for="@Model.LagerAntal" class="form-control" required /><br />
                        <span asp-validation-for="@Model.LagerAntal" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Salgs Pris</label><br>
                        <input asp-for="@Model.LagerPris" class="form-control" required /><br />
                        <span asp-validation-for="@Model.LagerPris" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Indkøbs Pris</label><br>
                        <input asp-for="@Model.LagerIndkøbPris" class="form-control" required /><br />
                        <span asp-validation-for="@Model.LagerIndkøbPris" class="text-danger"></span>
                    </div>



                    <form method="post">
                        <div class="form-group">
                            <input type="submit" value="Ændre @Model.LagerNavn" asp-page-handler="Edit" asp-route-lagerId="@Model.LagerId" class="btn btn-dark" />
                        </div>
                        <p></p>
                        <div class="form-group">
                            <input type="submit" value="Fortryd" asp-page-handler="Fortryd" class="btn btn-dark" />
                        </div>
                        <p></p>
                    </form>

                </form>
            </div>
        </div>

    </div>