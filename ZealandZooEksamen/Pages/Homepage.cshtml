@page
@model ZealandZooEksamen.Pages.HomepageModel
@{
    ViewData["Title"] = "Zealand Zoo";
}

@*Bjørn*@

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<body class="bg-light">
    <div class="text-center">
        <h1> Zealand Zoo</h1>
        <img src="~/images/Zealand Zoo.jpg" class="card-img-top w-25" alt="Zealand Zoo Logo">

    </div>

    <table class="table-center list-group-horizontal">
        <tbody>
            <tr>
                <td class="td-padding">
                    <a class="btn btn-dark btn-size" style="color:#fff387" asp-page="/EventCRUD/Index">Events</a>
                </td>
                <td class="td-padding">
                    <a class="btn btn-dark btn-size" style="color:#fff387" asp-page="/Kalender/Kalender">Kalender</a>
                </td>
                <td class="td-padding">
                    <a class="btn btn-dark btn-size" style="color:#fff387" asp-page="/TilmeldingCRUD/TilmeldingCreate">Tilmeld dig Nyhedsbrevet</a>
                </td>
            </tr>
        </tbody>
    </table>
</body>

<div>
    <h2>Faste åbningstider</h2>
    <table class="table table-striped table-hover bg-yellow rounded-2">
        <thead>
            <tr>
                <th>Event</th>
                <th>Dag</th>
                <th>Åbningstid</th>
                <th>Lukke tid</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Fredagsbar</td>
                <td>Fredag</td>
                <td>14:00</td>
                <td>19:00</td>
            </tr>
        </tbody>
    </table>
</div>