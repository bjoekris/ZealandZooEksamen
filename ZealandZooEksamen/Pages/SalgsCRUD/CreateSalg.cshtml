@page
@model ZealandZooEksamen.Pages.SalgsCRUD.CreateSalgModel
@{
}
@*Bjørn*@
@if (ZealandZooEksamen.Services.UserService.iAmAdmin)
{
<body class="bg-light">
    <div class="row">
        <div class="col-md-6 text-black bg-yellow rounded-2">
            <h2>Opret Salg</h2>
            <form method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.OpretSalg.SalgsId" />
               
                </div>

                <br />
                <div class="form-group">
                    <label> <h5>Produkt Navn</h5></label><br>
                    <p>Skriv kun navnet som det står i lageret (Se ude til højre-->)</p>
                    <input asp-for="@Model.OpretSalg.SalgsNavn" class="form-control" required /><br />
                </div>

                <div class="form-group">
                    <label>Antal </label><br>
                    <p>Kun tal mellem 0 og 999</p>
                        <input asp-for="@Model.OpretSalg.SalgsAntal" class="form-control" pattern="[0-999]" title="Antal skal være tal mellem 0 og 999" required /><br />
                </div>

                <div class="form-group">
                    <label>Salgs Pris</label><br>
                        <p>Kun tal mellem 0 og 999</p>
                        <input asp-for="@Model.OpretSalg.SalgsPris" class="form-control" pattern="[0-999]" title="Salgs Pris skal være tal mellem 0 og 999" required /><br />
                    <span asp-validation-for="@Model.OpretSalg.SalgsPris" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input class="btn btn-success" type="submit" value="Opret Solgte Varer" asp-page-handler="Opret" />
                </div>
                <br />
                <div class="form-group">
                    <a class="btn btn-danger" asp-page="IndexSalg">Fortryd</a>
                </div>
                <br />

            </form>

        </div>

    <div class="col-md-6">
        <h3>Vare Lageret</h3>
                <table class="table table-striped table-hover bg-yellow rounded-2">

                    <thead>
                        <tr>
                            @*<th>Lager Id</th>*@
                            <th>VareNavn</th>
                            <th>Antal Varer</th>
                            <th>Salgspris</th>
                            <th>IndkøbsPris</th>
                        </tr>
                    </thead>
                    <tbody>

                @foreach (var vare in Model.Lageret)
                {
                            <tr>


                                @*<td>@vare.LagerId</td>*@
                                <td>@vare.LagerNavn</td>
                                <td>@vare.LagerAntal</td>
                                <td>@vare.LagerPris</td>
                                <td>@vare.LagerIndkøbPris</td>
                            </tr>


                }
                    </tbody>
                </table>
    </div>
</body>
}