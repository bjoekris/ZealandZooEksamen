@page
@model ZealandZooEksamen.Pages.SalgsCRUD.CreateSalgModel
@{
}
@*Bjørn*@

<div class="row">
    <div class="col-md-6 text-black bg-light">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.OpretSalg.SalgsId" />
               
            </div>

            <div class="form-group">
                <label>Produkt Navn</label><br>
                <input asp-for="@Model.OpretSalg.SalgsNavn" class="form-control" required /><br />
            </div>

            <div class="form-group">
                <label>Antal </label><br>
                <input asp-for="@Model.OpretSalg.SalgsAntal" class="form-control" required /><br />
            </div>

            <div class="form-group">
                <label>Salgs Pris</label><br>
                <input asp-for="@Model.OpretSalg.SalgsPris" class="form-control" required /><br />
                <span asp-validation-for="@Model.OpretSalg.SalgsPris" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Opret Solgte Varer" asp-page-handler="Opret" />
            </div>


        </form>

    </div>
</div>

