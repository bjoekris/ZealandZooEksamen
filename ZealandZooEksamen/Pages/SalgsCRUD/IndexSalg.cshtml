@page
@model ZealandZooEksamen.Pages.SalgsCRUD.IndexSalgModel
@{
}

@*Bjørn*@

<body class="bg-light">
    <h2>Salgs Liste (SalgsCRUD)</h2>
    <a class="btn btn-success" asp-page="CreateSalg">Nyt Salg</a>
    <h6></h6>
    <table class="table table-striped table-hover bg-yellow rounded-2">
        <thead>
            <tr>
                <th>Salgs Id</th>
                <th>VareNavn</th>
                <th>Antal Vare</th>
                <th>Salgspris</th>
            
            </tr>
        </thead>
        <tbody>

            @foreach (var vare in Model.Salget)
            {
                <tr>


                <td>@vare.SalgsId</td>
                <td>@vare.SalgsNavn</td>
                <td>@vare.SalgsAntal</td>
                <td>@vare.SalgsPris</td>

                @if (ZealandZooEksamen.Services.UserService.iAmAdmin)
                {
                    <td><a class="btn btn-warning" asp-page="EditSalg" asp-route-salgsId="@vare.SalgsId">Rediger Salg</a></td>


                    <td><a class="btn btn-danger" asp-page="DeleteSalg" asp-route-salgsId="@vare.SalgsId">Slet Salg</a></td>
                }
            </tr>




        }
    </tbody>
</table>


    <div class="container p-3 my-3 bg-dark text-white"> Omsætningen er: <strong>@Model.Omsætning</strong>  </div>

    </br>

    <div class="container p-3 my-3 bg-dark text-white"> Værdi af solgte varer + varelager (Indkøbspris) er: <strong>@Model.Resultat</strong>  </div>
</body>