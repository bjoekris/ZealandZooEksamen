@model ZealandZooEksamen.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row-cols-1">
        <h1>Log ind</h1>


        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label">Navn</label><br>
                <input asp-for="@Model.Name" class="form-control-sm" /><br>
            </div>


            <div class="form-group">
                <label asp-for="@Model.Password1" class="control-label">Password</label><br>
                <input type="password" asp-for="@Model.Password1" class="form-control-sm" 
                placeholder="Mindst 6 tegn">
                <br>
            </div>


            <div class="col-auto">
                <input type="submit" value="Log ind" asp-page-handler="Log Ind" />
            </div>
        </form>

    </div>
</div>

